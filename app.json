{
  "expo": {
    "name": "NutriScan",
    "slug": "nutriscan",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nutriscan",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.williamtower.nutriscan",
      "infoPlist": {
        "NSCameraUsageDescription": "NutriScan needs camera access to scan barcodes and nutrition labels."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#00C853",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.nutriscan.app",
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#00C853",
          "dark": {
            "backgroundColor": "#121212"
          }
        }
      ],
      "expo-web-browser",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "NutriScan needs camera access to scan barcodes and nutrition labels.",
          "enableCodeScanner": true
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
